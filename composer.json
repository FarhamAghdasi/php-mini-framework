{
    "name": "yourname/mini-framework",
    "description": "A lightweight PHP MVC framework",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Core/helpers.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "App\\Core\\ComposerScripts::postAutoloadDump"
        ],
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\"",
            "php -r \"if (!is_dir('storage/logs')) { mkdir('storage/logs', 0755, true); }\"",
            "php -r \"if (!is_dir('storage/cache')) { mkdir('storage/cache', 0755, true); }\"",
            "php -r \"if (!is_dir('storage/sessions')) { mkdir('storage/sessions', 0755, true); }\"",
            "php -r \"if (!is_dir('storage/views')) { mkdir('storage/views', 0755, true); }\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}